    "version": "0.2.0",
    "configurations": [
        {
            "name": "CMake build and debug GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "CMake build and unittest GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/App-Unit-Tests",
            "args": ["1"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "CMake build and debug LLDB (CLang on MacOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "cmake",
            "MIMode": "lldb"
        },
        {
            "name": "CMake build and unittest LLDB (CLang on MacOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/App-Unit-Tests",
            "args": ["1"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "cmake",
            "MIMode": "lldb"
        }
    ]
}